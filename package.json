{
  "name": "eslint-plugin-sonarjs",
  "version": "0.0.0",
  "description": "SonarJS rules for ESLint",
  "main": "lib/index.js",
  "repository": "git@github.com:SonarSource/eslint-plugin-sonarjs.git",
  "license": "LGPL-3.0",
  "keywords": ["sonarjs", "eslint"],
  "bugs": {
    "url": "https://github.com/SonarSource/eslint-plugin-sonarjs/issues"
  },
  "homepage": "https://github.com/SonarSource/eslint-plugin-sonarjs",
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "build": "rimraf lib && tsc -p tsconfig-src.json",
    "test": "jest",
    "typecheck": "tsc"
  },
  "peerDependencies": {
    "eslint": "^3.0.0 || ^4.0.0"
  },
  "devDependencies": {
    "@types/eslint": "4.16.0",
    "@types/estree": "0.0.38",
    "@types/jest": "22.2.2",
    "@types/node": "9.6.1",
    "eslint": "4.19.1",
    "jest": "22.4.3",
    "prettier": "1.11.1",
    "rimraf": "2.6.2",
    "ts-jest": "22.4.2",
    "typescript": "2.8.1"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all"
  },
  "jest": {
    "collectCoverageFrom": ["src/**/*.ts"],
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "moduleFileExtensions": ["ts", "js", "json"],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": ["<rootDir>/tests/**/*.test.ts"]
  }
}
