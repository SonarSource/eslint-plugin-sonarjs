{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2017"],
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "outDir": "lib",
    "sourceMap": true
  },
  "include": ["ruling", "src", "tests", "typings"],
  "exclude": ["ruling/javascript-test-sources"]
}
