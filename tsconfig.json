{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "lib": ["es2017"],
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "outDir": "lib",
    "sourceMap": true,
    "moduleResolution": "nodenext"
  },
  "include": ["src/**/*.ts"]
}
